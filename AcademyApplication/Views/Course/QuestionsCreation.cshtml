                <div class="col-lg-8 col-md-8 col-sm-8">
                    @Html.TextBox("option2", null, new { @id = "option2", @class = "form-control", @required = "required" })
                    @Html.CheckBox("isOption2HasImage", false, new { @class = "isHaveImage" }) <span>isHaveImage</span>
                    <div>
                        @Html.TextBox("uploadOption2", null, new
                        {
                            @Class = "uploadControl",
                            @placeholder = "",
                            @id = "uploadOption2",
                            @Value = "",
                            @type = "file",
                            Accept = "image/*",
                        })
                    </div>
