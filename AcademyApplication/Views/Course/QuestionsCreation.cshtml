                    @Html.CheckBox("isOption3HasImage", false, new { @class = "isHaveImage" }) <span>isHaveImage</span>
                    <div>
                        @Html.TextBox("uploadOption3", null, new
                        {
                            @Class = "uploadControl",
                            @placeholder = "",
                            @id = "uploadOption3",
                            @Value = "",
                            @type = "file",
                            Accept = "image/*",
                        })
