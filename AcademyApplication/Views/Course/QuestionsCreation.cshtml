            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s
        }

        #uploadQuestion, #uploadOption1, #uploadOption2, #uploadOption3, #uploadOption4 {
            display: none;
        }

        .errorMessage {
            color: red;
        }

        .successMesage {
            color: blue;
        }

        .uploadControl {
            margin-top: 10px;
        }
    </style>
}

@section MainSection
{
    @{
        Html.RenderPartial("~/Views/Common/_Menu.cshtml");
    }
    <form id="QuestionForm" method='post' enctype='multipart/form-data'>
        <section class="container">
            <div class="row form-group">
                <div class="col-lg-4 col-md-4 col-sm-4"></div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <label id="message"></label>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-4 col-md-4 col-sm-4"> <label>Question Group<span class="Required-field">*</span></label></div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    @if (ViewBag.QuestionGroup != null)
                    {
                        @Html.DropDownList("QuestionGroup", null, "--Choose Question Group--", new { @class = "form-control", @required = "required" })
                    }
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-4 col-md-4 col-sm-4"> <label>Question Type<span class="Required-field">*</span></label></div>

