@section ScriptsSection
{
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/owl.carousel.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var questionGroupId = "";
            $("#QuestionGroup").change(function () {
                questionGroupId = $("#QuestionGroup option:selected").val();

            });
            var questionTypeId = "";
            $("#QuestionType").change(function () {
                questionTypeId = $("#QuestionType option:selected").val();

            });
            var isQuestionHasImage = false;
            var isOption1HasImage = false;
            var isOption2HasImage = false;
            var isOption3HasImage = false;
            var isOption4HasImage = false;
            $("input[class='isHaveImage']").change(function () {
                isQuestionHasImage = $("input[name='isQuestionHasImage']:checked").val();
                isOption1HasImage = $("input[name='isOption1HasImage']:checked").val();
                isOption2HasImage = $("input[name='isOption2HasImage']:checked").val();
                isOption3HasImage = $("input[name='isOption3HasImage']:checked").val();
                isOption4HasImage = $("input[name='isOption4HasImage']:checked").val();

                if (!isQuestionHasImage) {
                    $('#uploadQuestion').val("");
                    $('#uploadQuestion').css('display', 'none');
                }
                        else
                        $('#uploadQuestion').css('display', 'block');

                if (!isOption1HasImage) {
                    $('#uploadOption1').val("");
                    $('#uploadOption1').css('display', 'none');
                }
                        else
                        $('#uploadOption1').css('display', 'block');
                if (!isOption2HasImage) {
                    $('#uploadOption2').val("");
                    $('#uploadOption2').css('display', 'none');
                }
                    else
                        $('#uploadOption2').css('display', 'block');

                if (!isOption3HasImage) {
                    $('#uploadOption3').val("");
                    $('#uploadOption3').css('display', 'none');
                }
                else
                        $('#uploadOption3').css('display', 'block');

                if (!isOption4HasImage) {
                    $('#uploadOption4').val("");
                    $('#uploadOption4').css('display', 'none');
                }
                else
                    $('#uploadOption4').css('display', 'block');

            });


            $("#addQuestions").on('click', function () {
                var answerValue = $("input[name='answer']:checked").val();
                var uploadQuestion = $('#uploadQuestion');

                var questionImage, option1Image , option2Image , option3Image , option4Image;
                if (uploadQuestion) {
                    if (uploadQuestion[0].files[0])
                        uploadQuestion = uploadQuestion[0].files[0];
                }
                var uploadOption1 = $('#uploadOption1');
                if (uploadOption1) {
                    if (uploadOption1[0].files[0])
                        uploadOption1 = uploadOption1[0].files[0];
                }
                var uploadOption2 = $('#uploadOption2');
                if (uploadOption2) {
                    if (uploadOption2[0].files[0])
                        uploadOption2 = uploadOption2[0].files[0];
                }
                var uploadOption3 = $('#uploadOption3');
                if (uploadOption3) {
                    if (uploadOption3[0].files[0])
                        uploadOption3= uploadOption3[0].files[0];
                }
                var uploadOption4 = $('#uploadOption4');
                if (uploadOption4) {
                    if (uploadOption4[0].files[0])
                         uploadOption4 = uploadOption4[0].files[0];
                }

                var question = $("#question").val();
                var option1 = $("#option1").val();
                var option2 = $("#option2").val();
                var option3 = $("#option3").val();
                var option4 = $("#option4").val();
                if (questionGroupId == "") {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please choose Question Group");
                    $("#QuestionGroup").focus();
                }
                else if (questionTypeId == "") {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text('Please choose Question Type');
                    $("#QuestionType").focus();
                }
                else
                if (!question) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please enter Question");
                    $("#question").focus();
                }
                else if (!option1) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please enter Option1");
                    $("#option1").focus();
                }
                else if (!option2) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please enter Option2");
                    $("#option2").focus();
                }

                else if (!option3) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please enter Option3");
                    $("#option3").focus();
                }

                else if (!option4) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please enter Option4");
                    $("#option4").focus();
                }

                else if (!answerValue) {
                    $('#message').addClass('errorMessage');
                    $('#message').removeClass('successMessage');
                    $('#message').text("Please choose correct answer");
                    $("input[name = 'answer']").focus();
                }


                else {
                    if (window.FormData !== undefined) {
                        var formData = new FormData();
                        formData.append('questionGroup', questionGroupId);
                        formData.append('questionType', questionTypeId);
                        formData.append('question', question);
                        formData.append('uploadQuestion', uploadQuestion);
                        formData.append('option1', option1);
                        formData.append('uploadOption1', uploadOption1);
                        formData.append('option2', option2);
                        formData.append('uploadOption2', uploadOption2);
                        formData.append('option3', option3);
                        formData.append('uploadOption3', uploadOption3);
                        formData.append('option4', option4);
                        formData.append('uploadOption4', uploadOption4);
                        formData.append('correctAnswer', answerValue);
                      
                // Make your AJAX call
                        $.ajax({
                            url: '@System.Web.Configuration.WebConfigurationManager.AppSettings["BaseURL"]' + "Course/QuestionsSubmit",
                            //url: '@Url.Action("QuestionsSubmit", "Course")',
                            data: formData,
                            dataType: 'json',
                            processData: false,
                            contentType: false,
                            async: false,
                            type:'POST',
                            success: function (data) {
                                if (data > 0) {
                                    $('#message').text("Question added successfully");
                                    $('#message').removeClass('errorMessage');
                                    $('#message').addClass('successMesage');
                                    $('#message').focus();
                                    $("#QuestionGroup").val('');
                                    $("#QuestionType").val('');
                                    $("#question").val('');
                                    $("#option1").val('');
                                    $("#option2").val('');
                                    $("#option3").val('');
                                    $("#option4").val('');
                                    $("input[name = 'answer']").prop('checked', false);
                                    $("input.isHaveImage").prop('checked', false);
                                    $("#uploadQuestion").val('');
                                    $("#uploadOption1").val('');
                                    $("#uploadOption2").val('');
                                    $("#uploadOption3").val('');
                                    $("#uploadOption4").val('');
                                    $('#uploadQuestion').css('display', 'none');
                                    $('#uploadOption1').css('display', 'none');
                                    $('#uploadOption2').css('display', 'none');
                                    $('#uploadOption3').css('display', 'none');
                                    $('#uploadOption4').css('display', 'none');
                                }
                                else {

                                    $('#message').text("Something went wrong");
                                    $('#message').removeClass('errorMessage');
                                    $('#message').addClass('successMesage');
                                }
                            },
                            error: function (xhr, ajaxOptions, thrownError) {
                                console.log(xhr.status);
                                console.log(xhr.responseText);
                                console.log(thrownError);
                            }
                        });
                    }
                }
                });

    });
    </script>

}
