

@section TitleSection
{
    ATC Educational Institution || Contact Us
}
@section StyleSection
{
    @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/contactus.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
@section MainSection
{
    @{
        Html.RenderPartial("~/Views/Common/_Menu.cshtml");
    }
    <div id="contact-us">
        <div class="container">
            <div class="row">
                <div id="info" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div id="contact-header"><h3 class="bold">CONTACT US</h3></div>
                    <div class="regular" id="contact-message">
                        We would love to hear from you.
                    </div>
                </div>
                <div id="contact-form" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    @*<form action="/contact" method="post">*@
                        
                         <div class="form-group">

                            <label class="content" for="Name">Name*</label>
                            <input class="form-control medium " id="Name" maxlength="50" name="Name" type="text" value="">

                        </div>
                        <div class="form-group">

                            <label class="content" for="EmailAddress">Email address*</label>
                            <input class="form-control medium " id="EmailAddress" maxlength="50" name="Email" type="text" value="">


                        </div>
                        <div class="form-group">

                            <label class="content" for="Phone">Phone*</label>
                            <input class="form-control medium " id="Phone" maxlength="50" name="Phone" type="text" value="">

                        </div>
                        <div class="form-group">

                            <label class="content" for="Info">Additional Information*</label>
                            <textarea class="form-control medium " cols="20" id="Info" maxlength="10000" name="Info" rows="5"></textarea>
                        </div>
                        <button id="submitValues" type="submit" class="btn  large-btn btn-default medium  pull-right">SUBMIT</button>
                    @*</form>*@
                </div>

                <div id="location-section" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div id="location-header" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h4 class="bold">LOCATIONS</h4>
                    </div>
                    <div id="chennai" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="location-title">
                            <h4 class="bold">Chennai Office</h4>
                        </div>
                        <div class="location-info content">
                            ATC Educationl Institution <br>
                            No-47, Vniger Street, Opposite to Joyalukkas<br>
                            Kanchipuram - 631501<br>
                            India<br>
                            Phone: 044-47210626<br>
                            Mobile: +919444760920<br />
                            Bus Stop: Kanchipuram Busstnd/Taluk office<br />
                        </div>
                        <div class="location-contact-info content">
                            <span class="label">E-mail:</span> <a href="mailto:atckpm@gmail.com">atckpm@gmail.com</a>
                        </div>
                    </div>
                </div>
                <div id="map" style="width:100%;height:400px;background:yellow;margin-top:100px;"></div>
            </div>
        </div>
    </div>
        
     @{
            Html.RenderPartial("~/Views/Common/_Footer.cshtml");
     }
}

@section ScriptsSection
{
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/owl.carousel.min.js"></script>
    <script src="~/scripts/custom.js"></script>
    <script src="~/scripts/contactus.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=&callback=myMap"></script>
}
